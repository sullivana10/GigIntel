<% layout('layouts/boilerplate')%>
    <div id="map" style="width: 100%; height: 500px"></div>
    <h1>All Venues</h1>
    <div>
        <a href="/venues/new">Add Venue</a>
    </div>
    <% for (let venue of venues) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(venue.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=venue.images[0].url%>">
                        <% }else {%>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/sullivana10/image/upload/v1632340082/GigIntel/mzqhw3mv0dulrka537xz.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= venue.title %>
                        </h5>
                        <p class="card-text">
                            <%= venue.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= venue.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/venues/<%=venue._id%>">View <%=venue.title %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const venues = {features: <%- JSON.stringify(venues) %>}
            </script>

            <script src="/javascripts/clusterMap.js"></script>